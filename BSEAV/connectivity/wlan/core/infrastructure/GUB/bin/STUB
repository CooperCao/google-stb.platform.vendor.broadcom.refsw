#!/usr/bin/env python2.7
"""
This is a do-nothing script to be used as a starter for new programs.

All text here will be shown in the usage message generated by -h or --help.

EXAMPLES:

To do this to that:

    %(prog)s --do-this --to-that ...

"""

from __future__ import print_function
from __future__ import unicode_literals

# Imported first to fix up sys.path etc.
import preface  # pylint: disable=relative-import

import argparse


def main():
    """Entry point for standalone use."""

    parser = argparse.ArgumentParser(
        epilog=__doc__.strip(),
        formatter_class=argparse.RawDescriptionHelpFormatter)
    parser.add_argument(
        '-o', '--output-file',
        metavar='OFILE',
        help="send output to OFILE")
    parser.add_argument(
        '-v', '--verbose', action='count', default=0,
        help="increment verbosity level")
    parser.add_argument(
        '-w', '--whatever', action='store_true',
        help="help description here")
    parser.add_argument(
        'arg1', help="first positional parameter")
    opts = parser.parse_args()

    print('Actual code here; "--whatever" will be available as opts.whatever')
    print('just to keep pylint happy %s %s' % (preface.PROG, opts.arg1))
    # See http://hwnbu-twiki.broadcom.com/bin/view/Mwgroup/PythonStyleGuide

if __name__ == '__main__':
    main()

# vim: ts=8:sw=4:tw=80:et:
