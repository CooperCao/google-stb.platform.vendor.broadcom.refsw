#! /bin/bash

# UTF Q status: Reports UTF jobs queued on the named queue server.
# $Id: 146d9b514c527803cb625edefc754c816b8f4798 $
# $Copyright Broadcom Corporation$

if [ $# -eq 0 ]; then
   echo 2>&1 "usage: $0 host ..."
   exit 1 
fi
for i
do
    echo "$i:"
    err=$((cat</dev/tcp/$i/6701) 3>&1 2>&3)
    if [[ $? && !($err =~ .*refused.*) ]]; then
	echo >&2 "$err"
	code=1
    fi
done
exit $code
