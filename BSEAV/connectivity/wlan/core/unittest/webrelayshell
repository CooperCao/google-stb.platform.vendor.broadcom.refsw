#!/usr/bin/expect
# -*-tcl-*-
#
# $Copyright Broadcom Corporation$
# $Id$
#

set host [lindex $argv 0]
set cmd [join [lreplace $argv 0 0] &]

if {[info exists env(EXP_INTERNAL)]} {
    exp_internal 1
} else {
    exp_internal 0
}

log_user 1
set timeout 6

spawn -noecho -open [socket $host 80]


exp_send "GET /state.xml?$cmd HTML/1.1\r\n\r\n"
expect "</datavalues>"

exit

