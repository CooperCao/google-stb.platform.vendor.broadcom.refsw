package require UTF
package require UTF::Test::ConnectAPSTA

UTF::Test xxx {AP STA1 STA2 args} {
    sta2 load {*}$args
    sta1 reload
    sta1 wl PM 1
    sta2 wl PM 1
    ConnectAPSTA $AP [list $STA1 $STA2] -chanspec 36/80 -security open
    try {
	UTF::Multiperf [list $STA1 $AP $AP $STA2] -w 4m -t 60
    } finally {
	catch {$STA1 wl disassoc}
	catch {$STA2 wl disassoc}
    }
}


