package require UTF
package require UTF::Test::ConnectAPSTA

UTF::Test SWWLAN-28194 {AP STA args} {

    eval $STA load $args

    $STA wl msglevel +as
    $STA wl iem_dbg -1

    # Associate in WEP
    ConnectAPSTA $AP $STA -security wep -chanspec 3

    # Reassociate in open
    ConnectAPSTA $AP $STA -security open

    # Pass traffic
    UTF::Multiperf [list $AP $STA] -i 2 -t 6

}
