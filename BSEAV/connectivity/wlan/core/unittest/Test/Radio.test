#!/bin/env utf
# -*-tcl-*-

#
# UTF test script testing radio
#


package require UTF

package require UTF::Test::Join
package require UTF::Test::ConnectAPSTA

package provide UTF::Test::Radio 2.0

UTF::Test Radio {AP STA}  {

    # Disable radio
    $AP wl radio off
    $STA wl radio off

    # Enable radio
    $AP wl radio on
    $STA wl radio on

    if {[$AP hostis Router Vx]} {
	ConnectAPSTA $AP $STA
    } else {
	Join $AP $STA
    }
    $STA wl disassoc
}
