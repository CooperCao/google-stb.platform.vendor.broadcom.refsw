#!/bin/env utf
# -*-tcl-*-

package require UTF::Streams

UTF::Test PR103061 {sta1 sta2 num inc wait rate}  {

    package require UTF::Streams
    UTF::stream astream -transmitsta $sta1 -receivesta $sta2
    UTF::stream bstream -transmitsta $sta2 -receivesta $sta1
    bstream configure -rate ${rate}M
    astream configure -rate ${rate}M

    for {set i 0} {$i < $num} {incr i $inc} {
	bstream start
	astream start
	UTF::Sleep $wait
	bstream stop
        astream stop
    }
    astream destroy
    bstream destroy
}
