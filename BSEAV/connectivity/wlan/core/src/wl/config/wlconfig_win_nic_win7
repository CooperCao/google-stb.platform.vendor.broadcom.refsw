# Win7 wl driver config file: Intended to serve three flavors
# (1) Microsoft Inbox (2) Production (with CCX) (2) Production (without CCX)
#

# get common
include $(WLCFGDIR)/wlconfig_win

EXTSTA=1

# features

#ifdef BCMCCX
  # Conditionally turn off ccx
  ifneq ($(BCMCCX),0)
        BCMCCX=1
  endif
#endif # BCMCCX

WLVIF=1
WLP2P=1

#ifdef WLTEST
  # turn off P2P for mfgtest builds
  ifeq ($(WLTEST),1)
        WLP2P=0
        WLMCNX=0
        WLP2P_UCODE_ONLY=0
  endif
#endif # WLTEST

# Override
WLCQ=0
# The Win7 driver uses APSTA instead MBSS mode
MBSS=0
# Win7 driver does not support WDS per Microsoft, but it required for BTAMP
WDS=1
# not ready to support yet

#ifdef BCMWAPI_WAI
  ifneq ($(BCMWAPI_WAI),0)
        BCMWAPI_WAI=1
  endif
#endif # BCMWAPI_WAI

#ifdef BCMWAPI_WPI
  ifneq ($(BCMWAPI_WPI),0)
        BCMWAPI_WPI=1
  endif
#endif # BCMWAPI_WPI

ISID_STATS=1

BCMNVRAMW=1
BCMDMA64OSL=1
BCMAUTOOTP=1

TRAFFIC_MGMT=1
TRAFFIC_SHAPING=1

WLTDLS=1
TDLS_TESTBED=1
WL_LPC=1
GTK_RESET=1
WL_LTR=1
WL_PRE_AC_DELAY_NOISE_INT=1
SURVIVE_PERST_ENAB=1
WLWNM=1
SAVERESTORE=1
