#  First, determine the top-level source directory. Our file name should be the last
#  one in the MAKEFILE_LIST, so two levels up should be the top.
#
#  Be sure to use the ":=" (immediate) assignment because MAKEFILE_LIST changes
#  for each makefile include!

ifndef B_REFSW_TOP
    B_REFSW_TOP := $(abspath $(dir $(lastword $(MAKEFILE_LIST)))/../..)
endif

BSEAV = ${B_REFSW_TOP}/BSEAV
NEXUS_TOP = ${B_REFSW_TOP}/nexus

FILE_LIST = $(shell find ${B_REFSW_TOP} -name "b_*_targets.inc")
PACKAGE_LIST = $(foreach file,${FILE_LIST},$(patsubst b_%_targets.inc,%,$(notdir ${file})))

all:        $(patsubst %,b_%_target_build,${PACKAGE_LIST})
clean:      $(patsubst %,b_%_target_clean,${PACKAGE_LIST})
clean_all:  $(patsubst %,b_%_target_clean_all,${PACKAGE_LIST})

$(foreach  file,${FILE_LIST},$(eval include ${file}))